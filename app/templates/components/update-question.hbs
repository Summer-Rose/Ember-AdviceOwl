{{#if updateQuestionForm}}
<div>
  <h3>Edit Question</h3>
  <br/>
  <form>
    <div class="form-group">
      {{input value=question.username id="username" class="form-control"}}
    </div>

    <div class="form-group">
      {{input value=question.category id="category" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="question">Provide some context/details</label>
      {{textarea value=question.question id="question" class="form-control"}}
    </div>

    <button {{action 'update' question}} class="btn btn-xs btn-success">Save changes</button>
  </form>
</div>
{{else}}
<button {{action 'updateQuestionForm'}} class="btn btn-xs btn-primary">Edit question</button>
{{/if}}
